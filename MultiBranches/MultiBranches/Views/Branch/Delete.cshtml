@model MultiBranches.Models.BranchModel

<h2>هل أنت متأكد من حذف الفرع؟</h2>

<div>
    <h4>@Model.Name</h4>
    <p>@Model.Location</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="BranchId" />
    <button type="submit" class="btn btn-danger">حذف</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
