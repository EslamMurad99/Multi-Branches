@model IEnumerable<MultiBranches.Models.ProductModel>

@{
    ViewData["Title"] = "قائمة المنتجات";
}

<h2>قائمة المنتجات</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ إضافة منتج جديد</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>السعر</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">تعديل</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
